<h1>Edit <%= crypt.name %></h1>
<form method="POST" action="/cryptids/<%= cryptIndex %>/?_method=PUT">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= crypt.name %>" placeholder="New Name">

    <label for="type">Type:</label>
    <input type="text" name="type" id="type" value="<%= crypt.type %>" placeholder="New Species">

    <input type="submit" value="Edit <%= crypt.name %>"
</form>